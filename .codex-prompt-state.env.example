# codex-prompt-state defaults for this repo
CODEX_PROMPT_STATE_ENABLED=1

# Store and work roots
CODEX_PROMPT_STATE_STORE_ROOT=/home/luce/apps/loki-logging/temp/codex-prompt-state
CODEX_PROMPT_STATE_WORK_ROOT=/tmp/codex-prompt-state-work
CODEX_PROMPT_STATE_PREFLIGHT_REPORT_ROOT=/home/luce/apps/loki-logging/temp/codex-prompt-state/preflight

# Frontmatter/config policy merge mode
# merge | frontmatter_only | config_only
CODEX_PROMPT_STATE_FRONTMATTER_ENABLED=1
CODEX_PROMPT_STATE_FRONTMATTER_POLICY=merge

# Optional defaults used when policy mode permits config defaults
CODEX_PROMPT_STATE_DEFAULT_AUTOCOMMIT=no
CODEX_PROMPT_STATE_DEFAULT_AUTOPUSH=no
CODEX_PROMPT_STATE_DEFAULT_MOVE_TO_COMPLETED=no
CODEX_PROMPT_STATE_DEFAULT_WARN_MODE=auto-approve
CODEX_PROMPT_STATE_DEFAULT_WARN_GATE=yes
CODEX_PROMPT_STATE_DEFAULT_WARNING_POLICY=strict
CODEX_PROMPT_STATE_DEFAULT_WARN_ALLOW_REGEX=
CODEX_PROMPT_STATE_DEFAULT_WARN_ALLOW_FILE=
CODEX_PROMPT_STATE_DEFAULT_WARN_ALLOW_TYPES=
CODEX_PROMPT_STATE_DEFAULT_ALLOW_NONCRITICAL=yes
CODEX_PROMPT_STATE_DEFAULT_RETRY_MAX=1
CODEX_PROMPT_STATE_DEFAULT_LLM_AUTOHEAL=yes

# Optional policy locks (yes/no)
CODEX_PROMPT_STATE_LOCK_AUTOCOMMIT=no
CODEX_PROMPT_STATE_LOCK_AUTOPUSH=no
CODEX_PROMPT_STATE_LOCK_MOVE_TO_COMPLETED=no
CODEX_PROMPT_STATE_LOCK_WARN_MODE=no
CODEX_PROMPT_STATE_LOCK_WARN_GATE=no
