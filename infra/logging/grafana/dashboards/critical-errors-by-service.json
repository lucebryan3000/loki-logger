      "type": "stat",
      "title": "Total Critical Errors (4h)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({level=\"error\", service_name=~\"$service_name|mcp-server.service|logging-e2e-check.service\"}[4h]))"
