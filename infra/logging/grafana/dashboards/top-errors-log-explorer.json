{
  "uid": "top-errors-log-explorer",
  "title": "Errors by Service",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "editable": true,
  "tags": [
    "canonical",
    "codeswarm",
    "errors",
    "logging",
    "triage"
  ],
  "panels": [
    {
      "type": "stat",
      "title": "Logs seen (5m)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({log_source=~\"$log_source\"}[5m]))"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Error-like logs (5m) (expected idle)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({log_source=~\"$log_source\"} |~ \"(?i)(error|fail|exception|panic)\" [5m]))"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top services with errors (5m) (expected idle)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(15, sum by (service_name) (count_over_time({log_source=~\"$log_source\",service_name=~\".+\"} |~ \"(?i)(error|fail|exception|panic)\" [5m])))"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top sources with errors (5m) (expected idle)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(15, sum by (log_source) (count_over_time({log_source=~\"$log_source\"} |~ \"(?i)(error|fail|exception|panic)\" [5m])))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error trend by source (5m) (expected idle)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (log_source) (rate({log_source=~\"$log_source\"} |~ \"(?i)(error|fail|exception|panic)\" [5m]))"
        }
      ]
    },
    {
      "type": "logs",
      "title": "Error explorer (expected idle)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{log_source=~\"$log_source\"} |~ \"(?i)(error|fail|exception|panic)\""
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "log_source",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "P8E80F9AEF21F6940"
        },
        "query": "label_values(log_source)",
        "includeAll": true,
        "multi": true,
        "allValue": ".+",
        "current": {
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  }
}
