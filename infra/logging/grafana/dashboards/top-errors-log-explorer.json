{
  "uid": "top-errors-log-explorer",
  "title": "Top Errors / Log Explorer",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "tags": [
    "logging",
    "loki",
    "ops",
    "errors"
  ],
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "log_source",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "P8E80F9AEF21F6940"
        },
        "query": "label_values(log_source)",
        "includeAll": true,
        "allValue": ".+",
        "refresh": 2,
        "multi": false,
        "current": {
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Logs seen (5m)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({log_source=~\"$log_source\"}[5m]))",
          "queryType": "range",
          "direction": "backward",
          "datasource": {
            "type": "loki",
            "uid": "P8E80F9AEF21F6940"
          }
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Top log sources (5m)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "gridPos": {
        "h": 8,
        "w": 18,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, sum by (log_source) (count_over_time({log_source=~\"$log_source\"}[5m])))",
          "queryType": "range",
          "direction": "backward",
          "datasource": {
            "type": "loki",
            "uid": "P8E80F9AEF21F6940"
          }
        }
      ]
    },
    {
      "id": 3,
      "type": "logs",
      "title": "Log Explorer",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{log_source=~\"$log_source\"}",
          "datasource": {
            "type": "loki",
            "uid": "P8E80F9AEF21F6940"
          }
        }
      ]
    }
  ],
  "annotations": {
    "list": []
  }
}
