{
  "uid": "wireguard-cloudflare",
  "title": "WireGuard + Cloudflare + UFW",
  "timezone": "America/Chicago",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-12h",
    "to": "now"
  },
  "editable": true,
  "tags": [
    "canonical",
    "codeswarm",
    "network",
    "wireguard",
    "cloudflare"
  ],
  "description": "Combined network operations dashboard for WireGuard, Cloudflare, and Ubuntu UFW signals (health, error pressure, offenders, and drill logs).",
  "panels": [
    {
      "type": "text",
      "title": "Source Context",
      "options": {
        "mode": "markdown",
        "content": "### Source Context\n- Selected signal filter: `${signal:text}`\n- Selected log source filter: `${log_source:text}`\n- Selected service filter: `${service_name:text}`\n- Selected source type filter: `${source_type:text}`\n- Selected syslog channel filter: `${syslog_channel:text}`\n- Selected syslog level filter: `${syslog_level:text}`\n- Selected file path filter: `${filename:text}`\n- Note: `All` includes WireGuard + Cloudflare + UFW signals."
      },
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 4
      }
    },
    {
      "type": "stat",
      "title": "Network signal events",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({log_source=~\"$log_source\",service_name=~\"$service_name\",source_type=~\"$source_type\"} |~ \"$signal\" [$__range]))"
        }
      ],
      "description": "Total WireGuard/Cloudflare matching events for the selected filters and dashboard time.",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 6,
        "h": 5
      }
    },
    {
      "type": "stat",
      "title": "Error-like network events",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({log_source=~\"$log_source\",service_name=~\"$service_name\",source_type=~\"$source_type\"} |~ \"$signal\" |~ \"(?i)(error|err|fatal|panic|fail|failed|denied|refused|timeout|handshake failed|unable to|unreachable|operation not permitted|exit-code)\" [$__range]))"
        }
      ],
      "description": "Error/failure subset of WireGuard/Cloudflare signals.",
      "gridPos": {
        "x": 6,
        "y": 4,
        "w": 6,
        "h": 5
      }
    },
    {
      "type": "stat",
      "title": "WireGuard signal events",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({log_source=~\"$log_source\",service_name=~\"$service_name\",source_type=~\"$source_type\"} |~ \"(?i)(wireguard|wg0|wg-quick)\" [$__range]))"
        }
      ],
      "description": "WireGuard-specific signal volume.",
      "gridPos": {
        "x": 12,
        "y": 4,
        "w": 6,
        "h": 5
