        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate({log_source=~\"$log_source\",service_name=~\"$service_name\",source_type=~\"$source_type\"} |~ \"$signal\" [$__interval]))"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 9,
        "w": 12,
        "h": 8
