{
  "uid": "pipeline-health",
  "title": "Pipeline Health",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "editable": true,
  "tags": [
    "canonical",
    "codeswarm",
    "health",
    "logging",
    "pipeline"
  ],
  "panels": [
    {
      "type": "stat",
      "title": "Loki queryable (streams in 5m)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({log_source=~\"$log_source\"}[5m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Total log ingest rate",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate({log_source=~\"$log_source\"}[5m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Syslog ingest volume (rsyslog_syslog)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate({log_source=\"rsyslog_syslog\"}[5m]))"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Rsyslog transport errors (30m) (expected idle)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({log_source=\"rsyslog_syslog\"} |~ \"(omfwd|suspend|refused)\" [30m])) or vector(0)"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Rsyslog generic errors (30m) (expected idle)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({log_source=\"rsyslog_syslog\"} |~ \"(?i)error\" [30m])) or vector(0)"
        }
      ]
    },
    {
      "type": "table",
      "title": "Error-like volume by source (5m) (expected idle)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, sum by (log_source) (count_over_time({log_source=~\"$log_source\"} |~ \"(?i)(error|fail|exception|panic)\" [5m])))"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Alloy restarts (6h)",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "changes(process_start_time_seconds{job=\"alloy\"}[6h])"
        }
      ]
    },
    {
      "type": "stat",
      "title": "E2E marker seen (15m)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({log_source=\"rsyslog_syslog\"} |~ \"MARKER=\" [15m])) or vector(0)"
        }
      ]
    },
    {
      "type": "logs",
      "title": "Rsyslog error drill (expected idle)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{log_source=\"rsyslog_syslog\"} |~ \"(?i)(omfwd|suspend|refused|error)\""
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "log_source",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "P8E80F9AEF21F6940"
        },
        "query": "label_values(log_source)",
        "includeAll": true,
        "multi": true,
        "allValue": ".+",
        "current": {
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  }
}
