{
  "uid": "host-container-overview",
  "title": "Host and Containers",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "editable": true,
  "tags": [
    "canonical",
    "codeswarm",
    "containers",
    "host",
    "prometheus"
  ],
  "panels": [
    {
      "type": "timeseries",
      "title": "Host CPU %",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * (1 - avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Host Mem Used %",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * (node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Disk Used %",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * (1 - node_filesystem_avail_bytes{fstype!~\"tmpfs|overlay\"} / node_filesystem_size_bytes{fstype!~\"tmpfs|overlay\"})"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Host network RX bytes/s",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(node_network_receive_bytes_total{device!~\"lo|veth.*\"}[5m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Host network TX bytes/s",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(node_network_transmit_bytes_total{device!~\"lo|veth.*\"}[5m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Host load (5m)",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "node_load5"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top containers by CPU",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, rate(container_cpu_usage_seconds_total{id=~\"/system.slice/docker-.*scope\"}[5m]))"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top containers by Mem",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, container_memory_working_set_bytes{id=~\"/system.slice/docker-.*scope\"})"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Key service restarts (6h)",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "changes(process_start_time_seconds{job=~\"alloy|prometheus\"}[6h])"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Filesystem free inodes",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(node_filesystem_files_free{fstype!~\"tmpfs|overlay\"})"
        }
      ]
    }
  ]
}
