{
  "uid": "codeswarm-src-docker",
  "title": "docker",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "editable": true,
  "tags": [
    "canonical",
    "codeswarm",
    "docker",
    "logging",
    "source"
  ],
  "panels": [
    {
      "type": "stat",
      "title": "Logs (5m)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({log_source=\"docker\"}[5m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Log rate (5m)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate({log_source=\"docker\"}[5m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error-like rate (5m)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate({log_source=\"docker\"} |~ \"(?i)(error|fail|exception|panic)\" [5m])) or vector(0)"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top services (5m)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(15, sum by (service_name) (count_over_time({log_source=\"docker\", service_name=~\".+\"}[5m])))"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top service labels (5m)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(15, sum by (service) (count_over_time({log_source=\"docker\", service=~\".+\"}[5m])))"
        }
      ]
    },
    {
      "type": "table",
      "title": "Volume by source_type (5m)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, sum by (source_type) (count_over_time({log_source=\"docker\", source_type=~\".+\"}[5m])))"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top stacks (5m)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(15, sum by (stack) (count_over_time({log_source=\"docker\", stack=~\".+\"}[5m])))"
        }
      ]
    },
    {
      "type": "logs",
      "title": "Drill logs",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{log_source=\"docker\"}"
        }
      ]
    }
  ]
}
