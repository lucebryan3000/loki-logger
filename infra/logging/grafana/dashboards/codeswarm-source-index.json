{
  "uid": "codeswarm-source-index",
  "title": "CodeSwarm - Source Index",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "tags": [
    "codeswarm",
    "logging",
    "audit",
    "loki"
  ],
  "templating": {
    "list": [
      {
        "name": "log_source",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "P8E80F9AEF21F6940"
        },
        "query": "label_values(log_source)",
        "includeAll": true,
        "allValue": ".+",
        "refresh": 2,
        "current": {
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "table",
      "title": "Log volume by source (5m)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (log_source) (rate({log_source=~\".+\"}[5m]))",
          "queryType": "range",
          "direction": "backward",
          "datasource": {
            "type": "loki",
            "uid": "P8E80F9AEF21F6940"
          }
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "type": "table",
      "title": "Error hits by source (15m)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (log_source) (count_over_time({log_source=~\".+\"} |~ \"(?i)(error|fail|exception|panic)\" [15m]))",
          "queryType": "range",
          "direction": "backward",
          "datasource": {
            "type": "loki",
            "uid": "P8E80F9AEF21F6940"
          }
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "type": "logs",
      "title": "Live logs (selected source)",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{log_source=~\"$log_source\"}",
          "datasource": {
            "type": "loki",
            "uid": "P8E80F9AEF21F6940"
          }
        }
      ],
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 8
      }
    }
  ],
  "annotations": {
    "list": []
  }
}