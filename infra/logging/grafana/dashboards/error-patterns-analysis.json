          "value": "mcp-server.service"
        },
        "datasource": {
          "type": "loki",
          "uid": "P8E80F9AEF21F6940"
        },
        "definition": "label_values({level=\"error\"}, service_name)",
        "description": null,
        "error": null,
        "hide": 0,
        "includeAll": true,
        "label": "Error Service",
        "multi": false,
        "name": "error_service",
        "options": [],
