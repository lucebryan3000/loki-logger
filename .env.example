# Loki Logging env (example) - safe to commit

# Compose project
COMPOSE_PROJECT_NAME=logging

# Published ports
GRAFANA_HOST=127.0.0.1
GRAFANA_PORT=9001
PROM_HOST=127.0.0.1
PROM_PORT=9004
LOKI_PUBLISH=0
LOKI_HOST=127.0.0.1
LOKI_PORT=9002

# Grafana admin credentials (set real values in .env)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME
GRAFANA_SECRET_KEY=CHANGE_ME
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=CHANGE_ME
GF_SECURITY_SECRET_KEY=CHANGE_ME

# Host path mappings
HOST_HOME=/home
HOST_ROOTFS=/
HOST_VAR_RUN=/var/run
HOST_SYS=/sys
HOST_VAR_LIB_DOCKER=/var/lib/docker
HOST_KMSG=/dev/kmsg
HOST_DOCKER_SOCK=/var/run/docker.sock
HOST_RUN_LOG_JOURNAL=/run/log/journal
HOST_VAR_LOG_JOURNAL=/var/log/journal
HOST_LOGS=/home/luce/_logs
HOST_TELEMETRY=/home/luce/_telemetry
HOST_VLLM=/home/luce/apps/vLLM

# Image tags and retention
GRAFANA_IMAGE=grafana/grafana:11.1.0
LOKI_IMAGE=grafana/loki:3.0.0
PROMETHEUS_IMAGE=prom/prometheus:v2.52.0
NODE_EXPORTER_IMAGE=prom/node-exporter:v1.8.1
CADVISOR_IMAGE=gcr.io/cadvisor/cadvisor:v0.49.1
ALLOY_IMAGE=grafana/alloy:v1.2.1
PROM_RETENTION_TIME=15d

# Telemetry writer
TELEMETRY_INTERVAL_SEC=10
