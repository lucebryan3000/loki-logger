# ============================================================================
# Environment Variables Template
# ============================================================================
# IMPORTANT: Copy this file to .env and fill in actual values
# NEVER commit .env file with secrets - it's added to .gitignore
#
# Instructions:
# 1. Copy this file to .env
# 2. Update all values (marked with <...>) with actual values
# 3. Keep .env local and never commit to version control
# 4. For defaults shared with the team, document in this template
# ============================================================================

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Project name (usually kebab-case)
APP_NAME=<project-name>

# Runtime environment: development, staging, production
APP_ENV=development

# Application server port
APP_PORT=3000

# Enable debug mode (true/false)
APP_DEBUG=false

# Application log level: debug, info, warn, error
APP_LOG_LEVEL=info

# Node environment (for Node.js apps)
NODE_ENV=development

# ============================================================================
# SERVER & NETWORK CONFIGURATION
# ============================================================================

# Server host/binding address
SERVER_HOST=localhost

# Enable CORS (development only)
CORS_ENABLED=true

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database URL format depends on your database
# PostgreSQL: postgres://user:password@localhost:5432/dbname
# MySQL: mysql://user:password@localhost:3306/dbname
# MongoDB: mongodb://user:password@localhost:27017/dbname
# SQLite: sqlite:./data/database.sqlite
DATABASE_URL=<database-connection-string>

# Database name
DB_NAME=<database-name>

# Database user
DB_USER=<db-user>

# Database password
DB_PASSWORD=<db-password>

# Database host
DB_HOST=localhost

# Database port
DB_PORT=5432

# Connection pool size
DB_POOL_SIZE=10

# Enable database migrations on startup
DB_AUTO_MIGRATE=false

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# Session secret key (generate with: openssl rand -base64 32)
SESSION_SECRET=<generate-with-openssl-rand-base64-32>

# JWT secret for token signing
JWT_SECRET=<jwt-secret-key>

# JWT expiration time (e.g., 7d, 24h, 3600s)
JWT_EXPIRES_IN=7d

# API key for services
API_KEY=<api-key>

# Bearer token for authentication
BEARER_TOKEN=<bearer-token>

# OAuth2 client ID
OAUTH2_CLIENT_ID=<oauth-client-id>

# OAuth2 client secret
OAUTH2_CLIENT_SECRET=<oauth-client-secret>

# OAuth2 redirect URI
OAUTH2_REDIRECT_URI=http://localhost:3000/auth/callback

# ============================================================================
# EXTERNAL SERVICES - CACHING
# ============================================================================

# Redis connection URL
# Format: redis://[:password@]host[:port][/db]
REDIS_URL=redis://localhost:6379/0

# Redis password (if applicable)
REDIS_PASSWORD=<redis-password>

# Cache TTL in seconds (0 = disabled, -1 = never expire)
CACHE_TTL=3600

# Cache key prefix
CACHE_PREFIX=<project-name>:

# ============================================================================
# EXTERNAL SERVICES - MESSAGE QUEUE
# ============================================================================

# RabbitMQ connection URL
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# AMQP queue name
AMQP_QUEUE=<queue-name>

# ============================================================================
# EXTERNAL SERVICES - EMAIL
# ============================================================================

# Email service provider (smtp, sendgrid, mailgun, ses, postmark)
EMAIL_PROVIDER=smtp

# SMTP host
SMTP_HOST=smtp.gmail.com

# SMTP port (25, 465, 587)
SMTP_PORT=587

# SMTP user (usually email address)
SMTP_USER=<email@example.com>

# SMTP password
SMTP_PASSWORD=<smtp-password>

# SMTP TLS (true/false)
SMTP_TLS=true

# SendGrid API key
SENDGRID_API_KEY=<sendgrid-api-key>

# Mailgun domain
MAILGUN_DOMAIN=<mailgun-domain>

# Mailgun API key
MAILGUN_API_KEY=<mailgun-api-key>

# Default from email address
EMAIL_FROM=noreply@<project-name>.com

# Support email address
SUPPORT_EMAIL=support@<project-name>.com

# ============================================================================
# EXTERNAL SERVICES - PAYMENT PROCESSING
# ============================================================================

# Stripe API keys
STRIPE_PUBLIC_KEY=pk_test_<stripe-key>
STRIPE_SECRET_KEY=sk_test_<stripe-key>
STRIPE_WEBHOOK_SECRET=whsec_<webhook-secret>

# PayPal configuration
PAYPAL_CLIENT_ID=<paypal-client-id>
PAYPAL_CLIENT_SECRET=<paypal-client-secret>

# Square configuration
SQUARE_ACCESS_TOKEN=<square-token>

# ============================================================================
# EXTERNAL SERVICES - CLOUD STORAGE
# ============================================================================

# AWS S3 configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=<aws-access-key>
AWS_SECRET_ACCESS_KEY=<aws-secret-key>
AWS_S3_BUCKET=<bucket-name>
AWS_S3_URL=https://<bucket-name>.s3.amazonaws.com

# Google Cloud Storage
GCS_PROJECT_ID=<gcs-project-id>
GCS_BUCKET=<gcs-bucket-name>
GCS_KEY_FILE=./keys/gcs-key.json

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT=<account-name>
AZURE_STORAGE_KEY=<storage-key>
AZURE_STORAGE_CONTAINER=<container-name>

# ============================================================================
# EXTERNAL SERVICES - MONITORING & ANALYTICS
# ============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=<ga-id>

# Sentry error tracking
SENTRY_DSN=<sentry-dsn>
SENTRY_ENVIRONMENT=development

# LogRocket session replay
LOGROCKET_ID=<logrocket-id>

# Datadog APM
DATADOG_API_KEY=<datadog-key>

# New Relic
NEW_RELIC_LICENSE_KEY=<new-relic-key>

# ============================================================================
# EXTERNAL SERVICES - MAPPING & LOCATION
# ============================================================================

# Google Maps API key
GOOGLE_MAPS_API_KEY=<google-maps-key>

# Mapbox access token
MAPBOX_ACCESS_TOKEN=<mapbox-token>

# ============================================================================
# EXTERNAL SERVICES - COMMUNICATION
# ============================================================================

# Twilio configuration
TWILIO_ACCOUNT_SID=<twilio-account-sid>
TWILIO_AUTH_TOKEN=<twilio-auth-token>
TWILIO_PHONE_NUMBER=<twilio-phone>

# Slack webhook for notifications
SLACK_WEBHOOK_URL=<slack-webhook-url>

# Discord webhook
DISCORD_WEBHOOK_URL=<discord-webhook-url>

# ============================================================================
# FEATURES & FLAGS
# ============================================================================

# Feature flags (true/false)
FEATURE_NEW_UI=false
FEATURE_BETA_REGISTRATION=false
FEATURE_ADVANCED_ANALYTICS=true

# A/B Testing
AB_TEST_VARIANT=control

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# Enable profiling
ENABLE_PROFILING=false

# Enable request logging
LOG_REQUESTS=true

# Enable query logging (database)
LOG_QUERIES=false

# Mock external services (testing)
MOCK_EXTERNAL_SERVICES=false

# ============================================================================
# NOTES
# ============================================================================
#
# KEEPING SECRETS SAFE:
# 1. Never commit .env to version control
# 2. Rotate secrets regularly in production
# 3. Use different secrets for dev/staging/prod
# 4. Store production secrets in secure vault (AWS Secrets Manager, Vault, etc.)
# 5. Audit access to sensitive environment variables
#
# BEST PRACTICES:
# - Use strong, random values for all secrets
# - Document expected format/length for each variable
# - Use consistent naming conventions (SCREAMING_SNAKE_CASE)
# - Group related variables together
# - Include comments for non-obvious variables
#
# DEVELOPMENT:
# - Create .env.example for template (this file)
# - Create .env.test for testing environment
# - Keep .env in .gitignore
# - Share .env.example in version control
#
# CI/CD:
# - Set environment variables in CI/CD platform
# - Never hardcode secrets in build files
# - Use encrypted secrets storage
# - Rotate service account credentials regularly
#
# End of .env.example template
